<!DOCTYPE html>
<html>
<head>
    <title>Liste des capteurs</title>
</head>
<body>
    <h1>Liste des capteurs</h1>

    <form id="filterForm" action="/viewSensors" method="GET">
        <div>
            <label for="sensorType">Sensor type:</label>
            <select id="sensorType" name="sensorType">
                <option value="All">All</option>
                <option value="Heart">Heart</option>
                <option value="Lungs">Lungs</option>
                <option value="Temperature">Temperature</option>
            </select>
        </div>
        <label>
            <input type="checkbox" name="available" value="true">
            Disponible
        </label>
        <br>
        <button type="submit">Filtrer</button>
    </form>

    <div>
        <button onclick="redirectToAddSensor()">Add sensor</button>
        <script>
            function redirectToAddSensor() {
                window.location.href = "/addSensor";
            }
        </script>
    </div>

    <div>
        <button onclick="redirectToDashboard()">Retour</button>
        <script>
            function redirectToDashboard() {
                window.location.href = "/dashboard";
            }
        </script>
    </div>

    <% if (sensors && sensors.length > 0) { %>
        <div id="sensorList">
            <% sensors.forEach(function(sensor, index) { %>
                <div id="sensor-<%= index %>">
                    <strong>ID:</strong> <%= sensor.SensorId %><br>
                    <strong>Type:</strong> <%= sensor.SensorType %><br>
                    <strong>Nom:</strong> <%= sensor.Patient %><br>
                    <input type="text" id="newPatientInput-<%= index %>" placeholder="Nouveau nom de patient">
                    <button onclick="updateSensor(index)">Modifier</button>
                </div>
                <hr>
            <% }); %>
        </div>
    <% } else { %>
        <div id="sensorList">
            Aucun capteur disponible.
        </div>
    <% } %>
    

</body>
</html>
